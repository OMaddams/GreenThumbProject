<Window x:Class="GreenThumbProject.Windows.PlantWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GreenThumbProject.Windows"
        mc:Ignorable="d"
        Title="PlantWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition />
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <ListView Name="lstPlants" Grid.Row="1" Grid.Column="1" Grid.RowSpan="3"/>
        <TextBox Name="txtPlantSearch" Grid.Row="4" Grid.Column="1" />

        <Button Name="btnAddPlant" Grid.Column="2" Grid.Row="1" Content="Add"/>
        <Button Name="btnDetails" Grid.Column="2" Grid.Row="2" Content="Details"/>
        <Button Name="btnDelete" Grid.Column="2" Grid.Row="3" Content="Delete"/>
        <Button Name="btnSearch" Grid.Column="2" Grid.Row="4" Content="Search"/>
    </Grid>
</Window>
